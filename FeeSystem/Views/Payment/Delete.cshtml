@model PaymentHistory

<div class="d-flex justify-content-center align-items-center w-100 mt-5 mb-5">
    <div class="details-box">
        <h3 class="text-danger">Czy na pewno chcesz usunąć płatność?</h3>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń Lokatora" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Powrót</a>
        </form>

    </div>
</div>