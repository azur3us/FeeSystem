@model (Resident resident, PaymentDetailsVM paymentDetails)


    <div class="d-flex justify-content-center align-items-center w-100 mt-5 mb-5">
        
        
        <div class="img-thumbnail p-5">
            <h4>Odbiorca: Wspólnota Mieszkaniowa</h4>
            <h4>Numer konta bankowego: 23 3453 0001 0000 00002 2345 8797</h4>
            <h5>Tytuł przelewu: @Model.resident.Name @Model.resident.Surname opłata za czynsz w miesiącu @Model.resident.FullMonthName(Model.paymentDetails.paymentHistory.Month.Month) 
            @Model.paymentDetails.paymentHistory.Month.Year</h5>
            <h5>Kwota do zapłaty @Math.Round(Model.paymentDetails.summaryOfCosts, 2) zł</h5>
            <form>
                <label>Satander</label>
                <input type="radio" name="Bank" data-href="https://santander.pl"><br />
                <label>ING</label>
                <input type="radio" name="Bank" data-href="https://ing.pl"/><br />
                <label>BNP Paribas</label>
                <input type="radio" name="Bank" data-href="https://www.bnpparibas.pl/klienci-indywidualni"/><br />
                <label>Credit Agricole</label>
                <input type="radio" name="Bank" data-href="https://www.credit-agricole.pl/klienci-indywidualni"/><br />
                <label>Getin Bank</label>
                <input type="radio" name="Bank"data-href="https://www.getinbank.pl/"/><br />
                <label>Santander Consumer Bank</label>
                <input type="radio" name="Bank" data-href="https://www.santanderconsumer.pl/"/>
            </form>
            <div class="d-flex justify-content-center align-items-center">
                <a target="_blank" class="btn-transfer btn-to-transfer" onclick="">Przkieruj do Banku</a>
            </div>

        </div> 
        
    </div>
