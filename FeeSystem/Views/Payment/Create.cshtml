@model PaymentHistory

<h2>Dodaj Płatność</h2>

<div class="row d-flex justify-content-center align-items-center w-100 mt-5 mb-5">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConnectedResident"></label>
                <input asp-for="ConnectedResident" />
                <span asp-validation-for="ConnectedResident" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Month"></label>
                <input asp-for="Month" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotWaterConsumption"></label>
                <input asp-for="HotWaterConsumption" />
                <span asp-validation-for="HotWaterConsumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColdWaterConsumption"></label>
                <input asp-for="ColdWaterConsumption" />
                <span asp-validation-for="ColdWaterConsumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentStatus"></label>
                <input asp-for="PaymentStatus" />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj Płatność" class="btn btn-success mb-2" />
                <a asp-action="Index" class="btn btn-danger float-right">Powrót</a>
            </div>
        </div>

    </form>
</div>

