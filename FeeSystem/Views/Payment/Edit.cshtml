@model PaymentHistory 
<h2>Edytuj status płatności</h2>

<div class="row d-flex justify-content-center align-items-center w-100 mt-5 mb-5">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Month">Dzień opłacenia</label>
                <input asp-for="Month" type="month" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.PaymentStatus == false)
                {
                    <p><b>Status płatności: </b><input asp-for="PaymentStatus" /><span style="color:red;">Nieopłacona</span></p>

                }
                else
                {
                    <p><b>Status płatności: </b><input asp-for="PaymentStatus" /><span style="color:lawngreen;">Opłacona</span></p>
                }
                <span asp-validation-for="PaymentStatus"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień status" class="btn btn-success mb-2" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger float-right">Powrót</a>
            </div>
        </div>



    </form>

</div>