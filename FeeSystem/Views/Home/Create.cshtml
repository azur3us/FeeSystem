@model Resident

<h2>Dodaj Lokatora</h2>

<div class="row d-flex justify-content-center align-items-center w-100 mt-5 mb-5">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Name" ></label>
                <input asp-for="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetersOfFlat" ></label>
                <input asp-for="MetersOfFlat"/>
                <span asp-validation-for="MetersOfFlat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayerNumber"></label>
                <input asp-for="PayerNumber"/>
                <span asp-validation-for="PayerNumber" class="text-danger"></span>
            </div>
            <div class="form-group">           
                <input type="submit" value="Dodaj Lokatora" class="btn btn-success mb-2"/>
                <a asp-action="Index" class="btn btn-danger float-right">Powrót</a>
            </div>
        </div>

    </form>
</div>