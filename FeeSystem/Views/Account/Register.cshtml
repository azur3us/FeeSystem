@model LoginVM

<h2 class="d-flex justify-content-center align-items-center w-100 mt-5 mb-5" >
    Aby skorzystać z systemu musisz zalogować się lub
    <a asp-action="Login" asp-controller="Account">&nbspzarejestrować!</a>

</h2>

<form asp-action="Register" asp-controller="Account" method="post" class="box" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h1>Rejestracja</h1>
    <input asp-for="UserName" placeholder="Nazwa użytkownika" />
    <span asp-validation-for="UserName" class="text-danger"></span>

    <input asp-for="Password" placeholder="Hasło" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <input type="submit" name="" value="Zarejestruj" />

</form>
